---
import { Image } from "astro:assets";

interface Props {
  src: ImageMetadata;
  alt: string;
  quality: string;
  description?: string;
  width?: string;
}

const { src, alt, quality, description, width } = Astro.props;
---

<div style={{maxWidth: '100%', width: `${width}px`}}>
  <Image {src} {alt} {quality} />
  {description && <p>{description}</p>}
</div>

<style>
  div {
    margin: 0 auto;

    & img {
      width: 100%;
      height: auto;
    }

    & p {
      font-size: 0.8rem;
      color: var(--darker-type);
      margin-top: 0;
      text-align: center;
    }
  }
</style>
