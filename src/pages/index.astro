---
import Layout from "../layouts/Layout.astro";
const title = "KameWalk";
---

<Layout title={title}>
  <main>
    <section>
      <div class="my-face">
        <img src="./k-tecchan.png" alt="k-tecchanの自画像" />
      </div>
      <h2>K-tecchan</h2>
      <section class="sns">
        <p>
          GitHub: <a
            href="https://github.com/K-tecchan"
            target="_blank"
            rel="noopener noreferrer">https://github.com/K-tecchan</a
          >
        </p>
        <p>
          Twitter: <a
            href="https://twitter.com/tecchanKameWalk"
            target="_blank"
            rel="noopener noreferrer">https://twitter.com/tecchanKameWalk</a
          >
        </p>
      </section>
      <div class="sign">
        <a href="/blog/1">go to blog</a>
      </div>
    </section>
  </main>
</Layout>

<style>
  main {
    display: flex;
    justify-content: center;
    text-align: center;
  }

  img {
    width: 90%;
  }
  .sns {
    text-align: left;
    transform: translate(12.5%);
  }

  .my-face {
    max-width: 100vw;
    margin-top: 100px;
  }

  .sign {
    margin: 30px 0 100px 0;
    font-size: 50px;
  }

  a {
    color: var(--main-color);
  }
</style>
