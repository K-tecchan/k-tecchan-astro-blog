---
import Post from "./Post.astro";

interface Props {
  posts: {
    slug: string;
    data: {
      title: string;
      description: string;
      published: Date;
      updated?: Date;
      tags: string[];
    };
  }[];
}

const { posts } = Astro.props;
---

<ul class="posts">
  {posts.map((post) => <Post {...post} />)}
</ul>

<style>
  .posts {
    padding: 0;
  }
</style>
