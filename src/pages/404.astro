---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import myGriefIcon from "@assets/weep-k-tecchan.png";

const title = "KameWalk / 404 Not Found";
const description = "指定したページは見つかりませんでした";
---

<Layout {title} {description}>
  <main>
    <section>
      <div class="my-face">
        <Image src={myGriefIcon} alt="k-tecchanの自画像" loading={"eager"} />
      </div>
      <h1>指定したページは見つかりませんでした</h1>
      <div class="sign">
        <a href="/blog/1">go to blog</a>
      </div>
    </section>
  </main>
</Layout>

<style>
  main {
    display: flex;
    justify-content: center;
    text-align: center;
  }

  .my-face {
    max-width: 100vw;
    margin-top: 100px;

    & img {
      width: 100%;
      height: auto;
    }
  }

  .sign {
    margin: 30px 0 100px 0;
    font-size: 50px;
  }

  a {
    color: var(--main-color);
  }
</style>
