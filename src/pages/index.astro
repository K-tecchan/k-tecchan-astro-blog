---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import myIcon from "../assets/k-tecchan.png";

const title = "KameWalk";
---

<Layout {title}>
  <main>
    <section>
      <div class="my-face">
        <Image src={myIcon} alt="k-tecchanの自画像" />
      </div>
      <h2>K-tecchan</h2>
      <p class="my-description">
        2023年から働き始めてます。
        <br />
        立派な社会の歯車になれるよう頑張ります。
      </p>
      <section class="sns">
        <p class="github">
          <a
            href="https://github.com/K-tecchan"
            target="_blank"
            rel="noopener noreferrer">GitHub</a
          >
        </p>
        <p class="twitter">
          <a
            href="https://twitter.com/tecchanKameWalk"
            target="_blank"
            rel="noopener noreferrer">Twitter</a
          >
        </p>
      </section>
      <div class="sign">
        <a href="/blog/1">go to blog</a>
      </div>
    </section>
  </main>
</Layout>

<style>
  main {
    display: flex;
    justify-content: center;
    text-align: center;
  }

  .sns {
    font-size: 1.4em;
    display: flex;
    gap: 35px;
    justify-content: center;
  }

  .my-face {
    max-width: 100vw;
    margin-top: 100px;

    & img {
      width: 100%;
      height: auto;
    }
  }

  .sign {
    margin: 30px 0 100px 0;
    font-size: 50px;
  }

  a {
    color: var(--main-color);
  }
</style>
